{
  "name": "@traveloka/react-load",
  "version": "0.2.1-alpha.0",
  "description": "react promise state management, loading, error, and success callback.",
  "main": "lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "lint": "tslint --type-check -p tsconfig.json src/*.tsx && tslint --type-check -p tsconfig.json tests/*.tsx",
    "test": "jest",
    "test:coverage": "yarn test --coverage",
    "test:ci": "yarn lint && yarn test:coverage -i --reporters jest-simple-dot-reporter jest-junit",
    "test:html": "nyc npm test && nyc report --reporter=html",
    "prebuild": "npm run clean",
    "clean": "rimraf lib/*",
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "create-react-context": "^0.2.2",
    "hoist-non-react-statics": "^3.0.0",
    "lodash": "^4.17.11"
  },
  "peerDependencies": {
    "react": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@types/flat": "^0.0.28",
    "@types/hoist-non-react-statics": "^3.0.0",
    "@types/jest": "^23.3.1",
    "@types/lodash": "^4.14.116",
    "@types/node": "^10.12.12",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "@types/react-test-renderer": "^16.8.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^26.6.3",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "jest-junit": "^12.0.0",
    "jest-simple-dot-reporter": "^1.0.5",
    "nyc": "^12.0.2",
    "react": "16.9.0-alpha.0",
    "react-hooks-testing-library": "^0.5.1",
    "react-test-renderer": "16.9.0-alpha.0",
    "regenerator-runtime": "^0.13.1",
    "ts-jest": "^23.1.3",
    "tslint": "5.11.0",
    "typescript": "^3.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/traveloka/react-load.git"
  },
  "author": "Traveloka",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/traveloka/react-load/issues"
  },
  "homepage": "https://github.com/traveloka/react-load#readme",
  "keywords": [
    "react-native-web",
    "loading",
    "error",
    "handler",
    "retry",
    "react",
    "react-native"
  ],
  "jest": {
    "notify": true,
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/(?!(react-native))/"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "testURL": "http://localhost",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "marlint": {
    "ignores": [
      "dist/**"
    ]
  }
}
